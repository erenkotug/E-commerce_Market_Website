@model ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
    if (User.Identity.IsAuthenticated)
    {
        Layout = "_MemberLayout";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/contact.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <div class="contact-container">
        <div class="contact-item">
            <div class="location-icon">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
            </div>
            <h4>Address:</h4>
            <h5>198 West 21th Street,</h5>
            <h5>Suite 721 New York, NY 10016</h5>
        </div>
        <div class="contact-item">
            <div class="location-icon">
                <i class="fa fa-phone" aria-hidden="true"></i>
            </div>
            <h4>Phone:</h4>
            <h5>+ 1235 2355 98</h5>
        </div>
        <div class="contact-item">
            <div class="location-icon">
                <i class="fa fa-envelope" aria-hidden="true"></i>
            </div>
            <h4>Email:</h4>
            <h5>info@northwind.com</h5>
        </div>
        <div class="contact-item">
            <div class="location-icon">
                <i class="fa fa-globe" aria-hidden="true"></i>
            </div>
            <h4>Website:</h4>
            <h5>northwind.com</h5>
        </div>
    </div>
    <div class="info-card">
        <div class="card-content">
            <h1>CONTACT US</h1>
            <form asp-controller="Home" asp-action="SendEmail" method="post">
                <div class="form-group-row">
                    <div class="form-group">
                        <label for="full-name">FULL NAME</label>
                        <input type="text" id="full-name" name="FullName" placeholder="Enter your full name">
                    </div>
                    <div class="form-group">
                        <label for="email">EMAIL ADDRESS</label>
                        <input type="email" id="email" name="Email" placeholder="Enter your email address">
                    </div>
                </div>
                <div class="form-group">
                    <label for="subject">SUBJECT</label>
                    <input type="text" id="subject" name="Subject" placeholder="Enter the subject">
                </div>
                <div class="form-group">
                    <label for="message">MESSAGE</label>
                    <textarea id="message" name="Message" placeholder="Enter your message"></textarea>
                </div>
                <button class="btn btn-mine" type="submit">Send Message</button>
            </form>
        </div>
        <div class="card-image">
            <img src="/image/phone.png" alt="Phone">
        </div>
    </div>
</body>
</html>
